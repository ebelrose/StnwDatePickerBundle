{% block dateTimePicker_widget %}
    {% set attr = attr|merge({'class': (attr.class|default('') ~ ' stnw_datetime_picker')|trim}) %}
    {{ form_errors(form.date) }}
    {{ form_errors(form.time) }}
    {{ form_widget(form.date) }}
    {{ form_widget(form.time, {'id' : id ~ '_time'}) }}
{% endblock %}